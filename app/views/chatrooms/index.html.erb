<h2 class="ui center aligned medium icon header">
  <i class="circular blue assistive listening systems icon"></i>
  Say Something
</h2>

<div class="ui two column grid">

  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
      <% @messages.each do |message| %>
        <div class="ui feed">
          <div class="event">
            <div class="content">
              <div class="summary">
                 <em><%= message.user.username %> (<%= message.updated_at.strftime("%d.%m.%Y - %H:%M") %>)</em>: <%= message.body %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      </div>
      <div class="extra content">
        <form class="ui reply form">
          <div class="field">
            <div class="ui fluid icon input">
              <input type="text" placeholder="Enter a message...">
              <i class="bordered inverted blue edit icon"></i>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="item">
            Inbox
          </a>
          <a class="item">
            Spam
          </a>
          <a class="item">
            Updates
          </a>
        </div>
      </div>
    </div>
  </div>

</div>